@model WebApp.Areas.Public.ViewModels.TimeTableAddViewModel

@{
ViewData["Title"] = "Edit";
}

<h1>Add</h1>

<h4>Task to TimeWindow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeWindowId" class="control-label">Time Window</label>
                <select asp-for="TimeWindowId" class="form-control" asp-items="@Model.TimeWindowsSelectList"></select>
            </div>
            <input type="hidden" asp-for="WorkTaskId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

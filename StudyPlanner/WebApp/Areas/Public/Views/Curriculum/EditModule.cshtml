@model WebApp.Areas.Public.ViewModels.CurriculumCreateEditModuleViewModel

@{
ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditModule">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Module.Label" class="control-label"></label>
                <input asp-for="Module.Label" class="form-control" />
                <span asp-validation-for="Module.Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.EAP" class="control-label"></label>
                <input asp-for="Module.EAP" class="form-control" />
                <span asp-validation-for="Module.EAP" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Module.Id" />
            <input type="hidden" asp-for="CurriculumId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-curriculumId="@Model.CurriculumId" asp-route-moduleId="@Model.Module.Id">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
